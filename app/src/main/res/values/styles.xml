<resources>

    <!-- Base application theme. -->

    <style name="Intro" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/android.corPrimariaDark</item>
        <item name="android:navigationBarColor">@color/android.preto</item>
        <item name="android:windowBackground">@color/android.corPrimaria</item>

    </style>

    <style name="AlertaPadraoTel" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Used for the title and text -->
        <item name="android:colorPrimaryDark">@color/android.corAcentuada</item>
        <item name="android:textColorPrimary">@color/android.preto</item>

    </style>
    <style name="ProgressPadraoTel" parent="Theme.AppCompat.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowMinWidthMajor">96%</item>
        <item name="android:windowMinWidthMinor">96%</item>
        <!-- Used for the title and text -->
        <item name="android:colorPrimaryDark">@color/android.corAcentuada</item>
        <item name="android:textColorPrimary">@color/android.preto</item>


    </style>



    <style name="Intro.ActionBar" parent="Intro">
        <!--<item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item> -->
        <item name="colorPrimaryDark">@color/android.corPrimariaDark</item>
        <item name="colorPrimary">@color/android.corPrimaria</item>
        <item name="android:textColorPrimary">@color/android.corPrimariaDark</item>
        <item name="colorAccent">@color/btn_login</item>
        <item name="android:windowBackground">@color/android.corPrimaria</item>
    </style>


    <style name="Intro.Usuario" parent="Intro.Fullscreen">

        <item name="android:textColorPrimary">@color/android.corCinzaClaro</item>
        <item name="android:windowBackground">@color/android.branco</item>
        <item name="colorAccent">@color/android.cinzaEscuro</item>

    </style>

    <style name="CriarSolucaotexto" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#d32f</item>
        <item name="colorControlActivated">#f75722</item>
        <item name="colorControlHighlight">#f636</item>
    </style>


    <style name="Intro.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/android.corPrimariaDark</item>
        <item name="android:navigationBarColor">@color/android.preto</item>
        <item name="android:textColorPrimary">@color/android.branco</item>
        <item name="colorAccent">@color/android.branco</item>
        <item name="android:windowBackground">@color/android.corPrimaria</item>
        <item name="colorControlNormal">@color/android.branco</item>

    </style>

    <style name="Intro.CriarSolucao" parent="Intro.Main">
        <!-- Customize your theme here. -->


        <item name="android:textColorPrimary">@color/android.preto</item>
        <item name="colorAccent">@color/android.cinzaEscuro</item>


    </style>


    <style name="Intro.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/android.corPrimariaDark</item>
        <item name="android:navigationBarColor">@color/android.preto</item>
        <item name="colorPrimaryDark">@color/android.corPrimariaDark</item>
        <item name="android:textColorPrimary">@color/android.branco</item>
        <item name="colorAccent">@color/android.corAcentuada</item>
        <item name="colorPrimary">@color/android.corPrimaria</item>
        <item name="colorControlNormal">@color/android.branco</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light">
        ...
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
    </style>




    <style name="IntroMainDialogoMenu" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->


        <item name="android:statusBarColor">@color/android.corPrimariaDark</item>
        <item name="android:navigationBarColor">@color/android.preto</item>
        <item name="colorPrimaryDark">@color/android.corPrimariaDark</item>
        <item name="android:textColorPrimary">@color/android.branco</item>
        <item name="colorAccent">@color/android.corAcentuada</item>
        <item name="colorPrimary">@color/android.corPrimaria</item>
    </style>






    <style name="Intro.DetalheCardNoTitle" parent="Intro.Main">

        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>


    <style name="Intro.Fullscreen" parent="Intro">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- BotÃ£o logar  -->
    <style name="Botao.matchParentAzul" parent="Widget.AppCompat.Button">

        <item name="android:background">@color/android.corPrimariaDark</item>
        <item name="android:colorButtonNormal">@color/android.preto</item>
        <item name="android:colorControlHighlight">@color/android.corAcentuada</item>
        <item name="android:textColor">@color/android.branco</item>
        <item name="android:shadowColor">@color/android.cinzaEscuro</item>

    </style>

    <style name="Botao.matchParentCinza" parent="Widget.AppCompat.Button">

        <item name="android:background">@color/android.cinzaEscuro</item>
        <item name="android:colorButtonNormal">@color/android.preto</item>
        <item name="android:colorControlHighlight">@color/android.corAcentuada</item>
        <item name="android:textColor">@color/android.branco</item>
        <item name="android:shadowColor">@color/android.cinzaEscuro</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/android.branco</item>
        <item name="android:textColor">@color/android.branco</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/android.corAcentuada</item>
        <item name="colorControlNormal">@color/android.preto</item>
        <item name="colorControlActivated">@color/android.corPrimaria</item>
    </style>

    <style name="Intro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Intro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
